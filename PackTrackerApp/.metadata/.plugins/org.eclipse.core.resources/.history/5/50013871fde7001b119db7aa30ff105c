	<script type="text/javascript">
		$(document).ready(function() {
			$(".delete_link").on("click",function(e) {
				e.preventDefault();
				link = $(this);
				//alert($(this).attr("href"));
				
				$("#yesButton").attr("href", link.attr("href"));
				$("#deleteModal").modal();
				
			});
		});
