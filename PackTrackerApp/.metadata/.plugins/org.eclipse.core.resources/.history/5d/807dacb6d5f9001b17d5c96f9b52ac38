	<!-- script for delete modal window -->
	
	<script type="text/javascript">
		$(document).ready(function() {
			$(".link-delete").on("click",function(e) {
				e.preventDefault();
				link = $(this);
				petName = link.attr("petName");
				$("#yesButton").attr("href",link.attr("href"));
				$("#modalBody").text("Are you sure, you want to delete "+petName+"'s pet profile?");
				$("#deleteModal").modal();
			});
		});
		
		 $('#report-link').on('click', function () {
			 $(window).on('load', function () {
				    $('#loading').hide();
			 })
		 }) 
	</script>
